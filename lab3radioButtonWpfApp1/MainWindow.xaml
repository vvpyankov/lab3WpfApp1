<Window x:Class="lab3radioButtonWpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3radioButtonWpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="stackPanel">
        <RadioButton GroupName="Color" Content="RED" IsChecked="True"/>
        <RadioButton GroupName="Color" Content="GREEN"/>
        <RadioButton GroupName="Color" Content="BLUE"/>
        <RadioButton GroupName="Size" Content="12" IsChecked="True"/>
        <RadioButton GroupName="Size" Content="20"/>
        <RadioButton GroupName="Size" Content="30"/>
    </StackPanel>
</Window>
