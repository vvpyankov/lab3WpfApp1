<Window x:Class="lab3WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <StackPanel Margin="5">
        <Label Target="{Binding ElementName=UserName}" Content="Enter your _name"/>
        <TextBox x:Name="UserName"/>

        <Label Target="{Binding ElementName=UserAdress}" Content="Enter your _adress"/>
        <TextBox x:Name="UserAdress"/>

    </StackPanel>
</Window>
